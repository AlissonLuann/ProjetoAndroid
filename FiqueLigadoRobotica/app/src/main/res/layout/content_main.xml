<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:showIn="@layout/activity_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/text_bemVindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Lucida Calligraphy"
            android:padding="2dp"
            android:text="Bem-Vindo  Ao Mundo
              da Robótica"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/text_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bemVindo"
            android:padding="2dp"
            android:textColor="#222"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            android:paddingLeft="34dp"
            android:paddingRight="24dp"/>

        <ImageView
            android:id="@+id/img_imageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/surgimento_robotica"
            android:src="@drawable/robosurgimento1"
            android:onClick="historia"/>
        <TextView
            android:id="@+id/text_surgimento_robotica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:fontFamily="sans-serif-medium"
            android:text="Como surgiu a robótica"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/img_principaiscompeticoes"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/principaiscompeti"
            android:onClick="competicao"/>
        <TextView
            android:id="@+id/text_competicoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:fontFamily="sans-serif-medium"
            android:text="Principais Competições"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/img_roboLixoEletron"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/lixo"
            android:onClick="eletronico"/>
        <TextView
            android:id="@+id/text_LixoEletron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:fontFamily="sans-serif-medium"
            android:text="Robôs Feito com Lixo Eletrônico"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_ProjrtoArduino"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/maxres"
            android:onClick="Projeto"/>
        <TextView
            android:id="@+id/text_projetoArduino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:fontFamily="sans-serif-medium"
            android:text="Projeto Arduino"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/img_AprendaRobo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/robocaseiro"
            android:onClick="fazerRobor"/>
        <TextView
            android:id="@+id/text_AprendendoFazerRobo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:fontFamily="sans-serif-medium"
            android:text="Aprenda a Fazer Mosquito caseiro"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />






    </LinearLayout>

</ScrollView>